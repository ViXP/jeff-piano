// Styles for PageLoading React component
.loading
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  background: darken($color-2, 60%)
  opacity: .84

  &::after
    content: ''
    background: url(<%= asset_path 'loading.svg' %>)
    background-size: cover
    width: 200px
    height: 200px
    position: fixed
    margin: auto
    top: 0
    left: 0
    right: 0
    bottom: 0